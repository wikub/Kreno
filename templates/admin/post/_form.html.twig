{% form_theme form '_form/_form_theme.html.twig' %}

{{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.publishedAt, {'attr': {'class': 'time'}}) }}
    
    <div class="btn-group float-end mt-3">
        <a href="{{ path('admin_post_index') }}" class="btn btn-secondary"><i class="fas fa-list"></i> retour</a>
        <button class="btn btn-primary"><i class="far fa-save"></i> {{ button_label|default('Enregister') }}</button>
    </div>
{{ form_end(form) }}
