{% extends 'base.html.twig' %}

{% block title %}Membre #{{user.id}} - {{ user.firstname}} {{ user.name }} {% endblock %}

{% block body %}
    {{ include('admin/user/_header.html.twig', {'nav_current': 'user'}) }}

    {% include '_elements/_flash_message.html.twig' %}

    

    <div class="table-responsive mb-3">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Courrier</th>
                    <td>{% if user.email %}<a href="mailto:{{user.email}}">{{ user.email }}</a>{% endif %}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ user.phonenumber }}</td>
                </tr>
                <tr>
                    <th>Categorie</th>
                    <td>{{ user.userCategory.name }}</td>
                </tr>
                <tr>
                    <th>Inscription</th>
                    <td>{{ user.subscriptionTypeLabel }}</td>
                </tr>
                <tr>
                    <th>Actif</th>
                    <td>{{ user.enabled?'Oui':'Non' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
