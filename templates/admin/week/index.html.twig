{% extends 'base.html.twig' %}

{% block title %}Liste des semaines{% endblock %}

{% block body %}
    <div class="pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-calendar-alt"></i> Semaines</h1>
    </div>

    {% include '_elements/_flash_message.html.twig' %}

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Semaine</th>
                    <th>Nom</th>
                    <th>Type</th>
                    <th>Cycle</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for week in weeks %}
                <tr>
                    <td><a href="{{ path('admin_week_show', {'id': week.id}) }}">{{ week.startAt ? week.startAt|date('d/m/Y') : '' }}</a></td>
                    <td><a href="{{ path('admin_week_show', {'id': week.id}) }}">{{ week.getDisplayName }}</a></td>
                    <td>{{ week.weekTypeLabel }}</td>
                    <td>{{ week.cycle.start|date('d/m/Y') }} au {{ week.cycle.finish|date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('admin_week_edit', {'id': week.id}) }}"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
