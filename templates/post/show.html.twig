{% extends 'base.html.twig' %}

{% block title %}Actualités {{ post.title }}{% endblock %}

{% block body %}
    <div class="pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-newspaper"></i> {{ post.title }}</h1>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="card-text">{{ post.content|raw }}</div>
        </div>
        <div class="card-footer"><small>Publié le {{ post.publishedAt|date('d/m/Y') }}</small></div>
    </div>
{% endblock %}
