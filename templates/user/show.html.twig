{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><i class="fas fa-users"></i> Modification membre #{{user.id}}</h1>
    </div>

    {% include '_elements/_flashMessage.html.twig' %}

    <div class="table-responsive mb-3">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th>Courrier</th>
                    <td>{% if user.email %}<a href="mailto:{{user.email}}">{{ user.email }}</a>{% endif %}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ user.phonenumber }}</td>
                </tr>
                <tr>
                    <th>Categorie</th>
                    <td>{{ user.userCategory.name }}</td>
                </tr>
                <tr>
                    <th>Inscription</th>
                    <td>{{ user.subscriptionTypeLabel }}</td>
                </tr>
                <tr>
                    <th>Actif</th>
                    <td>{{ user.enabled?'Oui':'Non' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center mb-3">
        <div class="btn-group mt-3">
            <a href="{{ path('user_index') }}" class="btn btn-secondary"><i class="fas fa-list"></i> Retour</a>
            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary"><i class="fas fa-user-edit"></i> Modifier</a>
            {% if user.enabled %}
            <a href="{{ path('user_disable', {'id': user.id}) }}" class="btn btn-secondary">Desactiver</a>
            {% else %}
            <a href="{{ path('user_enable', {'id': user.id}) }}" class="btn btn-secondary">Activer</a>
            {% endif %}
        </div>
    </div>
    
    <h2 class="h3">
        <i class="fas fa-file-signature"></i> Engagements
        <a href="{{ path('commitment_contract_new_foruser', {'user': user.id}) }}" class="btn btn-primary btn-sm" role="button"><i class="fas fa-plus"></i></a>
    </h2>

    
    {% for contract in user.commitmentContracts %}
    <div class="card">
        <div class="card-header fw-bold">
            {{ contract.type?contract.type.name }}
            {% if contract.finish %}
                <span class="badge bg-secondary">Terminé</span>
            {% else %}
                <span class="badge bg-danger">En cours</span>
            {% endif %}
        </div>
        <div class="card-body">
            <p class="card-text">
            {% if contract.finish %}
                Du {{ contract.start|date('d/m/Y') }} au {{ contract.finish|date('d/m/Y') }}
            {% else %}
                en cours à partir du {{ contract.start|date('d/m/Y') }}
            {% endif %}
            </p>
            <p class="card-text">
                {% if contract.type.regular == 1 %}
                <b>Créneaux réguliers :</b> 
                    <ul>
                        {% for regular in contract.regularTimeslots %}
                        <li>Semaine {{ regular.timeslotTemplate.weekTemplate.weekTypeLabel }} - {{ regular.timeslotTemplate.dayWeekLabel }} de {{regular.timeslotTemplate.start|date('H:m')}} à {{regular.timeslotTemplate.finish|date('H:m')}} - {{ regular.timeslotTemplate.name }}
                        </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </p>
            <p class="card-text">
                <b>Engagement :</b>
                {% if contract.type.nbTimeslotMin > 0 %}Nombre de créneaux minimum par cycle : {{contract.type.nbTimeslotMin}} {% endif %}
                {% if contract.type.nbHourMin > 0 %}Nombre de créneaux minimum par cycle : {{contract.type.nbHourMin}} {% endif %}
            </p>
        </div>
    </div>
    {% endfor %}
    





{% endblock %}
